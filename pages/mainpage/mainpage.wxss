/* pages/mainpage/mainpage.wxss */
page
{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fcfcfc;
}

.addButtonArea
{
  margin-bottom: 20rpx;
  width: 95%;
  
}

.searchArea
{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 95%;
}
.roundTextBox
{
  background-color: #ffffff;
  border-radius: 25rpx;
  border: 5rpx solid #d7ecff;
  width: 500rpx;
}

.filterArea
{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 95%;
  
}
.pickerArea
{
  background-color: #d7ecff;
  border: 5rpx solid #a4d4ff;
}
.pickerSelection
{
  background-color: #ecf7ff;
  border: 2.5rpx solid #aef3ff;
}

.listHeaderArea
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 95%;
  margin-bottom: 20rpx;
}

.listArea
{
  overflow-y: auto;
  height: 785rpx;
  width: 95%;
  background-color: #f0ffff;
  border: 5rpx solid #bde0ff;
}

.listContentArea
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  height: 250rpx;

  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.informationArea
{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.itemImageSize
{
  width: 200rpx;
  height: 200rpx;
}
.iconSize
{
  width:80rpx;
  height: 80rpx;
}
.buttonArea
{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}